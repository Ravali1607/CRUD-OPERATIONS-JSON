<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:core= "sap.ui.core"
xmlns= "sap.m"
>
    <Dialog id="createDialog" title="Create">
    <form:SimpleForm >
        <form:content>
        <Label text="ID NUMBER"></Label>
        <Input type="Number" id="eid"></Input>
        <Label text="NAME"></Label>
        <Input type="Text" id="e_name"></Input>
        <Label text="BLOOD GROUP"></Label>
        <Input type="Text" id="e_bloodgrp"></Input>
        <Label text="DESIGNATION"></Label>
        <Input type="Text" id="e_des"></Input>
        <Label text="EMAIL"></Label>
        <Input type="Email" id="e_email"></Input>
        <Label text="CONTACT"></Label>
        <Input type="Number" id="e_contact"></Input>
        <Label text="ADDRESS"></Label>
        <Input type="Text" id="e_address"></Input>
        <Label text="BRANCH"></Label>
        <Input type="Text" id="e_branch"></Input>
        </form:content>
    </form:SimpleForm>
    <HBox >
        <Button text="Submit" press="onSubmit"></Button>
        <Button text="Reset" press="onCancel"></Button>
        <Button text="Close" press="onClose"></Button>
    </HBox>
    </Dialog>
</core:FragmentDefinition>